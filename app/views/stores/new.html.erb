
<h1 class="storeh1">Add a new Store</h1>
<%= form_for @store do |f| %>

<% if @store.errors.any? %>
<h2>Errors</h2>
<ul >
  <% @store.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  
  <% end %>
</ul>

<% end %>




<div class="displaydiv2">
<p>
  
  <%= f.label :Store_Name,class:'required' %>
  <%= f.text_field :Store_Name %>
  
</p>

<p>
  
  <%= f.label :Manager ,class:'required'%>
  <%= f.text_field :Manager %>
  
</p>

<p>
  
  <%= f.label :City,class:'required' %>
  <%= f.text_field :City %>
  
</p>

<p>
  
  <%= f.label :Zipcode,class:'required' %>
  <%= f.text_field :Zipcode %>
  
</p>

<p>
  
  <%= f.label :State,class:'required' %>
  <%= f.text_field :State %>
  
</p>

<p>
  
  <%= f.label :Country ,class:'required' %>
  <%= f.text_field :Country %>
  
</p>


<p>
  
</br> </br>
  <%= f.submit "Submit",:class=>"button" %> &nbsp &nbsp &nbsp &nbsp

  <%= link_to '<button type="button" class="button" >Back</button>'.html_safe, stores_path %>
  
</p>

</div>

<% end %>